<section class="forms">
    <% if (title) { %>
        <h1><%= title %></h1>
        <% } else {
          res.redirect('/')
    } %>

  <%- messages() %>
    <% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <%  }) %>
    </ul>
    <% } %>

    <form class="general-form" action="/inv/add-classification" method="post">
        <label for="classification_name">Classification Name: </label>
        <span class="form-notes"><strong>Note:</strong> Name must be alphabetical characters only (No spaces or special characters)</span> 
        <input type="text" name="classification_name" id="classification_name" placeholder="Example: Luxury" required pattern="^[a-zA-Z]+$" value="<%= locals.classification_name %>">
        <button class="management-btns" type="submit">Add Vehicle</button>
     </form>

</section>